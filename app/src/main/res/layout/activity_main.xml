<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:background="@color/coloWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/reset_button">

        <TextView
            android:id="@+id/player_one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player 1 : 0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/player_two_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Player 2 : 0"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/reset_button_bg"
        android:onClick="reset_game"
        android:text="RESET"
        android:textColor="@color/coloWhite"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/lin_lay_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <LinearLayout
        android:id="@+id/lin_lay_main"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/lin_lay_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_00"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="button_click"
                android:tag="0"/>

            <Button
                android:id="@+id/button_01"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="1"
                android:background="@drawable/button_bg"
                android:onClick="button_click" />

            <Button
                android:id="@+id/button_02"
                android:layout_width="match_parent"
                android:tag="2"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="button_click" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:tag="3"
                android:layout_weight="1"
                android:background="@drawable/button_bg"
                android:onClick="button_click" />

            <Button
                android:id="@+id/button_11"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="4"
                android:background="@drawable/button_bg"
                android:onClick="button_click" />

            <Button
                android:id="@+id/button_12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="5"
                android:background="@drawable/button_bg"
                android:onClick="button_click" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_lay_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_20"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="6"
                android:background="@drawable/button_bg"
                android:onClick="button_click" />

            <Button
                android:id="@+id/button_21"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="7"
                android:background="@drawable/button_bg"
                android:onClick="button_click" />

            <Button
                android:id="@+id/button_22"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="8"
                android:background="@drawable/button_bg"
                android:onClick="button_click" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/reset_winnerMessage_layout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/reset_winnermessage_bg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:alpha="0">

        <TextView
            android:id="@+id/winnerMessage_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:textAlignment="center"
            android:textColor="@color/coloWhite"
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>